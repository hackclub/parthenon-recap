---
import type { Project } from '@/src/pages/projects.astro'

interface Props {
    project: Project
    descriptionCap?: number
    className?: string
}
const { project, descriptionCap, className } = Astro.props
const descriptionLimit = descriptionCap ?? 200
---
<div id = {project.fields.project_name.replace(/ /g, "_")} class = {`flex flex-col h-max md:h-full gap-4 border border-theme-cream bg-theme-green-darker ${className}`}>
    <img src = {project.fields.thumbnail} class = "w-full h-48 object-cover"/>
        <div class = "flex flex-col h-max md:h-full px-5 pb-5">
            <p>
                {project.fields.project_name}
            </p>
            <p class = "text-lg md:grow">
                {project.fields.description.slice(0, descriptionLimit)}{project.fields.description.length >= descriptionLimit ? "..." : ""}
            </p>

            <div class = "flex flex-row justify-between">
                <a target = "_blank" href = {project.fields.url_github}>code</a> 
                <a target = "_blank" href = {project.fields.url_demo}>demo</a> 
            </div>
        </div>
</div>
